{
  "openapi": "3.0.3",
  "info": {
    "title": "Pay Class",
    "description": "This is a documentation of pay class service",
    "contact": {
      "email": "bruno.dias.donnici@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "tags": [
    {
      "name": "health",
      "description": "Health check requests"
    },
    {
      "name": "infra",
      "description": "All requests about infrastructure"
    },
    {
      "name": "authentication",
      "description": "All requests about authentication"
    }
  ],
  "paths": {
    "/api/v1/status": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Status of application",
        "description": "Show informations about application status",
        "operationId": "getApplicationStatus",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApplicationStatus"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/migrations": {
      "get": {
        "tags": [
          "infra"
        ],
        "summary": "Dry run migrations",
        "description": "Show pending migrations",
        "operationId": "dryRunMigrations",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PendingMigrations"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "infra"
        ],
        "summary": "Run migrations",
        "description": "Show pending migrations",
        "operationId": "runMigrations",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PendingMigrations"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/sign-in/magic-link": {
      "post": {
        "tags": [
          "authentication"
        ],
        "summary": "Send magic link",
        "description": "Send magic link to user email",
        "operationId": "sendMagicLink",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendMagicLinkRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendMagicLinkResponse"
                }
              }
            }
          },
          "422": {
            "description": "Invalid body input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ApplicationStatus": {
        "type": "object",
        "properties": {
          "update_at": {
            "type": "string",
            "example": "2024-09-15T00:49:23.864Z"
          },
          "dependencies": {
            "type": "object",
            "properties": {
              "database": {
                "type": "object",
                "properties": {
                  "max_connections": {
                    "type": "number",
                    "example": 200
                  },
                  "opened_connections": {
                    "type": "number",
                    "example": 1
                  },
                  "version": {
                    "type": "string",
                    "example": "16"
                  }
                }
              }
            }
          }
        }
      },
      "PendingMigrations": {
        "type": "object",
        "properties": {
          "migrations": {
            "type": "array",
            "items": {
              "properties": {
                "path": {
                  "type": "string",
                  "example": "infra/migrations/1721682883506_create-permissions-table.js"
                },
                "name": {
                  "type": "number",
                  "example": 1721682883506
                },
                "timestamp": {
                  "type": "string",
                  "example": "1721682883506_create-permissions-table"
                }
              }
            }
          }
        }
      },
      "SendMagicLinkRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "phone": {
            "type": "string",
            "example": "1234567890"
          }
        },
        "required": ["name", "email", "phone"],
        "additionalProperties": false
      },
      "SendMagicLinkResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Magic link sent to user@example.com"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "message": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "custom": {
            "type": "object"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}
