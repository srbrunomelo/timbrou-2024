{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@payload-config": ["../../apps/timbrou/src/payload.config.ts"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
